//多种排序算法的比较与应用----计数排序
#include<stdio.h>
#define N 1230
void CountSorting(int a[], int n)
{
	int i, b[N], count[N + 1] = {0};
	for(i = 0; i < n; i ++)
		count[a[i]] ++;
	for(i = 1; i <= N;i ++)
		count[i] += count[i - 1];
	for(i = n - 1; i >= 0;i --)
	{
		b[count[a[i]] - 1] = a[i];
		count[a[i]] --;
	}
	for(i = 0; i < n; i ++)
		a[i] = b[i];
}

void print(int a[], int n)
{
	int i;
	for(i = 0; i < n;i ++)
		printf("%d ", a[i]);
	printf("\n");

}

int main(void)
{
	int a[] = {6, 12, 458, 5, 4, 28, 19, 1230, 9, 47};
	int n = sizeof(a) / sizeof(a[0]);
	printf("排序前的的无序数组：\n");
	print(a, n);
	CountSorting(a, n);
	printf("计数排序后的数组：\n");
	print(a, n);
	return 0;
}
